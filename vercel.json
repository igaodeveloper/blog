{
  "version": 2,
  "builds": [
    {
      "src": "client/index.html",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist/public" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "https://meu-backend-production.up.railway.app/api/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
} 